.app
  display: flex
  gap: 12px
  flex-wrap: wrap
  justify-content: flex-start
  padding: 12px 24px
  .website
    width: calc((100% - 48px) / 5);
    min-width 260px
    border-radius: 8px
    display: flex
    flex-direction: column
    align-items: center;
    box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1019607843);
    &.active
      border: 1px solid red
    &.disabled
      position relative
      &:after
        content: ''
        position absolute
        top: 0
        left: 0
        right: 0
        bottom: 0
        background-color: rgba(0, 0, 0, 0.45)
        border-radius: 8px
        z-index 10
        cursor not-allowed
    .top
      position relative
      width 100%
      height: 240px
      border-bottom: 1px solid rgba(5, 5, 5, 0.06)
      .name
        margin-top: 24px
        font-size: 18px
        font-weight: 400
        text-align: center
      .auto
        position: absolute
        width 100%
        bottom: 12px
        text-align: center
        .login
          margin-right: 6px
    .options
      padding: 6px 4px
      :global(.ant-tag)
        cursor pointer
